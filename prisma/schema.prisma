generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Produit {
  id           Int             @id @default(autoincrement())
  nom          String
  description  String?
  prixVente    Float
  prixAchat    Float
  quantiteStock Int
  seuilStock   Int
  mouvementStock Mouvement_Stock[]
  lot          Lot[]
}

model Vente {
  id          Int             @id @default(autoincrement())
  date        DateTime        @default(now())
  montantTotal Float
  utilisateur Utilisateur     @relation(fields: [utilisateurId], references: [id])
  utilisateurId Int
  mouvementStock Mouvement_Stock[]
}

model Mouvement_Stock {
  id          Int       @id @default(autoincrement())
  date        DateTime  @default(now())
  type        String
  quantite    Int
  produit     Produit   @relation(fields: [produitId], references: [id])
  produitId   Int
  vente       Vente?    @relation(fields: [venteId], references: [id])
  venteId     Int?
}

model Utilisateur {
  id          Int             @id @default(autoincrement())
  nom         String
  prenom      String
  email       String          @unique
  motDePasse  String
  role        String
  ventes      Vente[]
}

model Lot {
  id          Int             @id @default(autoincrement())
  dateExpiration DateTime
  quantite    Int
  produit     Produit   @relation(fields: [produitId], references: [id])
  produitId   Int
}